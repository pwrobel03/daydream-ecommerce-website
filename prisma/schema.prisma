// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  accounts      Account[]
  reviews       Review[]  // Relacja: Użytkownik ma wiele recenzji
  orders        Order[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}

model VerificationToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token]) 
}

model PasswordResetToken {
  id String @id @default(cuid())
  email String
  token String @unique
  expires DateTime

  @@unique([email, token]) 
}

model Sale {
  id            String   @id @default(cuid())
  name          String
  description   String?
  couponCode    String   @unique // cupon code
  discountValue Int      // value of discount (np. 15 for 15%)
  image         String?
  isActive      Boolean  @default(true)
  validFrom     DateTime @default(now())
  validTo       DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  image       String?   // category picture
  description String?
  
  // LOGIC OF subCategories (Self-relation):
  parentId    String?
  parent      Category?  @relation("CategoryToSub", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children    Category[] @relation("CategoryToSub")

  products    Product[]
  createdAt   DateTime   @default(now())
}

model Ingredient {
  id        String    @id @default(cuid())
  name      String    @unique
  image     String?   // picture of ingredient
  products  Product[] // relation many to many with products
}

model Status {
  id       String    @id @default(cuid())
  name     String    @unique // np. "Nowość", "Bestseller"
  slug     String    @unique // np. "new", "hot"
  color    String?   @default("#000000") // Kod HEX dla frontendu
  products Product[]
  
  createdAt DateTime @default(now())
}

model Product {
  id          String         @id @default(cuid())
  name        String
  slug        String         @unique
  description String?
  price       Decimal
  promoPrice  Decimal?
  statusId    String?
  status      Status?        @relation(fields: [statusId], references: [id], onDelete: SetNull)
  weight      String?
  stock       Int            @default(0)
  
  images      ProductImage[]
  categories  Category[]
  ingredients Ingredient[]
  reviews     Review[]       // Relacja: Produkt ma wiele recenzji
  orderItems  OrderItem[]    // Relacja: Produkt ma wiele zamówień
  
  createdAt   DateTime       @default(now())
}

model Review {
  id        String   @id @default(cuid())
  content   String   @db.Text
  rating    Int      @default(5) // Ocena 1-5
  userId    String
  productId String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Order {
  id           String      @id @default(cuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id])
  
  items        OrderItem[]
  totalAmount  Decimal
  
  status       OrderStatus @default(PENDING)
  isPaid       Boolean     @default(false)
  
  // addressId jest teraz opcjonalny (?) na etapie inicjalizacji
  addressId    String?     @unique 
  address      Address?    @relation(fields: [addressId], references: [id])

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Address {
  id          String   @id @default(cuid())
  fullName    String   // Imię i nazwisko odbiorcy
  street      String
  city        String
  zipCode     String
  phone       String
  
  // Relacja zwrotna
  order       Order?
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  price     Decimal // TO JEST "ZAMROŻONA" CENA (Snapshot)
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}