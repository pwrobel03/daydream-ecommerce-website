generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMERACJE ---

enum UserRole {
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELLED
}

// --- SYSTEM UŻYTKOWNIKÓW I AUTORYZACJI ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole  @default(USER)
  
  // Relacje NextAuth
  accounts      Account[]
  
  // Relacje biznesowe
  reviews       Review[]
  orders        Order[]
  
  // Adres profilowy (domyślny)
  addressId     String?   @unique
  address       Address?  @relation("UserDefaultAddress", fields: [addressId], references: [id])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
}

// --- KATALOG PRODUKTÓW ---

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  price       Decimal
  promoPrice  Decimal?
  weight      String?
  stock       Int      @default(0)
  
  // Relacja do statusu (np. Nowość, Hit)
  statusId    String?
  status      Status?  @relation(fields: [statusId], references: [id], onDelete: SetNull)
  
  // Relacje Many-to-Many i One-to-Many
  images      ProductImage[]
  categories  Category[]
  ingredients Ingredient[]
  reviews     Review[]
  orderItems  OrderItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  image       String?
  description String?
  
  // Samorelacja dla podkategorii
  parentId    String?
  parent      Category?  @relation("CategoryToSub", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children    Category[] @relation("CategoryToSub")

  products    Product[]
  createdAt   DateTime   @default(now())
}

model Status {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  color     String?   @default("#000000")
  products  Product[]

  createdAt DateTime  @default(now())
}

model Ingredient {
  id       String    @id @default(cuid())
  name     String    @unique
  image    String?
  products Product[]
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Review {
  id        String   @id @default(cuid())
  content   String   @db.Text
  rating    Int      @default(5)
  userId    String
  productId String
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- SYSTEM ZAMÓWIEŃ ---

model Order {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  
  items       OrderItem[]
  totalAmount Decimal
  
  status      OrderStatus @default(PENDING)
  isPaid      Boolean     @default(false)
  
  // Adres dostawy (opcjonalny na etapie draftu/rezerwacji)
  addressId   String?
  address     Address?    @relation(fields: [addressId], references: [id])

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  stripeSessionId  String?  @unique // Stripe payment sessionId
}

model Address {
  id       String @id @default(cuid())
  fullName String
  street   String
  city     String
  zipCode  String
  phone    String
  
  // Relacja do użytkownika (jako domyślny adres profilu)
  user     User?  @relation("UserDefaultAddress")
  
  // Relacja do zamówień (jako adres przypisany do konkretnych zakupów)
  orders   Order[]
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  price     Decimal // Snapshot ceny z momentu zakupu
}

// --- INNE ---

model Sale {
  id            String   @id @default(cuid())
  name          String
  description   String?
  couponCode    String   @unique
  discountValue Int
  image         String?
  isActive      Boolean  @default(true)
  validFrom     DateTime @default(now())
  validTo       DateTime
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}